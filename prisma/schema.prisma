generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String             @id @default(uuid())
  username               String             @unique
  email                  String             @unique
  password               String
  type                   PROFILETYPE        @default(ARTIST)
  wallet_address         String?            @unique
  bio                    String?            @db.VarChar(1000)
  instagram              String?
  twitter                String?
  country                String?
  state                  String?
  address                String?
  created_at             DateTime           @default(now())
  updated_at             DateTime           @updatedAt
  is_email_verified      Boolean?           @default(false)
  otp                    String?
  otp_expires_in         DateTime?
  reset_token            String?            @unique
  token_expies_in        DateTime?
  is_approved            Boolean            @default(false)
  profile_image          String?
  cover_image            String?
  is_artist              Boolean            @default(false)
  collected              Art[]              @relation("CollectedArt")
  artworks               Art[]              @relation("UserArt")
  collectibleFlags       CollectibleFlags[]
  collectibleLikes       CollectibleLikes[]
  exhibition             Exhibition[]       @relation("CreatedExhibition")
  collectedExhibitionArt ExhibitionArt[]    @relation("CollectedExhibitionArt")
  flags                  Flags[]
  likes                  Likes[]
  notifications          Notification[]
}

model Exhibition {
  id           String          @id @default(uuid())
  name         String
  description  String
  cover_image  String
  created_at   DateTime        @default(now())
  updated_at   DateTime        @updatedAt
  address      String
  artist_name  String
  country      String
  curator_name String
  location     String
  time         DateTime
  images       String[]
  date         DateTime
  nft_address  String?
  user_id      String?
  art_pieces   Art[]           @relation("ExhibitionArt")
  created_by   User?           @relation("CreatedExhibition", fields: [user_id], references: [id])
  artworks     ExhibitionArt[]
}

model Blog {
  id          String   @id @default(uuid())
  title       String
  cover_image String
  content     String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Category {
  id                  String          @id @default(uuid())
  name                String
  created_at          DateTime        @default(now())
  updated_at          DateTime        @updatedAt
  artworks            Art[]
  exhibition_artworks ExhibitionArt[]
}

model Art {
  id              String         @id @default(uuid())
  name            String
  floor_price     Float
  description     String         @db.VarChar
  dimensions      String
  user_id         String
  category_id     String
  location        String?
  contract        String?
  published_by    String?
  created_at      DateTime       @default(now())
  updated_at      DateTime       @updatedAt
  art_image       String?
  is_approved     Boolean        @default(false)
  nft_id          String?
  collected_by_id String?
  exhibition_id   String?
  category        Category       @relation(fields: [category_id], references: [id], onDelete: Cascade)
  collected_by    User?          @relation("CollectedArt", fields: [collected_by_id], references: [id])
  exhibition      Exhibition?    @relation("ExhibitionArt", fields: [exhibition_id], references: [id])
  user            User           @relation("UserArt", fields: [user_id], references: [id], onDelete: SetNull)
  flags           Flags[]
  likes           Likes[]
  notifications   Notification[]
  isSold          Boolean        @default(false)
}

model ExhibitionArt {
  id              String     @id @default(uuid())
  name            String
  floor_price     Float
  description     String     @db.VarChar
  dimensions      String
  category_id     String
  exhibition_id   String
  art_image       String
  nft_id          String?
  created_at      DateTime   @default(now())
  updated_at      DateTime   @updatedAt
  collected_by_id String?
  category        Category   @relation(fields: [category_id], references: [id], onDelete: Cascade)
  collected_by    User?      @relation("CollectedExhibitionArt", fields: [collected_by_id], references: [id])
  exhibition      Exhibition @relation(fields: [exhibition_id], references: [id], onDelete: Cascade)
}

model Collectibles {
  id              String             @id @default(uuid())
  name            String
  mint_price      Float
  description     String             @db.VarChar
  total_minted    Int                @default(0)
  total_unminted  Int                @default(0)
  published_by    String
  image           String
  contract        String?
  created_at      DateTime           @default(now())
  updated_at      DateTime           @updatedAt
  mint_per_wallet Int                @default(0)
  flags           CollectibleFlags[]
  likes           CollectibleLikes[]
}

model Likes {
  user_id    String
  art_id     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  art        Art      @relation(fields: [art_id], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, art_id])
}

model Flags {
  user_id    String
  art_id     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  art        Art      @relation(fields: [art_id], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, art_id])
}

model CollectibleLikes {
  user_id        String
  collectible_id String
  created_at     DateTime     @default(now())
  updated_at     DateTime     @updatedAt
  collectible    Collectibles @relation(fields: [collectible_id], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, collectible_id])
}

model CollectibleFlags {
  user_id        String
  collectible_id String
  created_at     DateTime     @default(now())
  updated_at     DateTime     @updatedAt
  collectible    Collectibles @relation(fields: [collectible_id], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, collectible_id])
}

model Notification {
  id         String    @id @default(uuid())
  user_id    String
  art_id     String?
  type       NOTIFTYPE
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  is_read    Boolean   @default(false)
  art        Art?      @relation(fields: [art_id], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Admin {
  id            String   @id @default(uuid())
  full_name     String
  email         String   @unique
  password      String
  phone_no      String
  profile_image String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  is_suspended  Boolean  @default(false)
  role          ROLE     @default(ADMIN)
}

enum NOTIFTYPE {
  BUYS
  UPLOADS
  FLAGS
}

enum PROFILETYPE {
  GALLERY
  ARTIST
}

enum ROLE {
  SUPERADMIN
  ADMIN
}

enum EXHIBITIONTYPE {
  HYBRID
  PHYSICAL
}
